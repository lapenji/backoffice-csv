generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"

}

datasource db {
  provider = "postgresql"
}


model Product {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  price        Float
  discount     Float
  discountType DiscountType
  createdAt    DateTime @default(now())
}

enum DiscountType {
  none
  percentage
  amount
}
